{
	"manifest_version": 2,
	"version": "0.0.1",
	"name": "Quoter",
	"description": "画面を4分割してGoogle検索効率化",
	"browser_action": {
		"default_icon": "images/icon.png",
		"default_title": "Quoter",
		"default_popup": "html/popup.html"
	},
	"icons": {
		"128": "images/icon.png"
	},
	"content_scripts": [
		{
			"matches": [
				"http://www.google.co.jp/*",
				"https://www.google.co.jp/*"
			],
			"js": [
				"js/jquery-3.3.1.min.js",
				"js/contents.js"
			],
			"css": [
				"css/style.css"
			]
		}
	],
	"background": {
		"scripts": [
			"js/background.js"
		]
	},
	"permissions": [
		"tabs",
		"background",
		"contextMenus",
		"http://*/*",
		"https://*/*"
	],
	"web_accessible_resources": [
		"images/*.png"
	]
}